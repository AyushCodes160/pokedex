generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Team {
  id        Int           @id @default(autoincrement())
  name      String
  ownerName String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  pokemons  TeamPokemon[]
}

model TeamPokemon {
  id        Int    @id @default(autoincrement())
  teamId    Int
  team      Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  slot      Int
  speciesId Int
  nature    String
  moves     Json

  @@unique([teamId, slot])
}
